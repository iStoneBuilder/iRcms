<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.stone.it.rcms.base.dao.IRoleDao">
  <sql id="query_base">
    select
    parent_id as parentId,
    id,
    code,
    name,
    description,
    enterprise_id as enterpriseId,
    created_time as createDate,
    updated_time as updateDate,
    created_by as createBy,
    updated_by as updateBy
    from tpl_role_t
  </sql>
  <delete id="deleteRole"></delete>
  <insert id="createRole"></insert>
  <select id="findPageResult" resultType="com.stone.it.rcms.base.vo.RoleVO"></select>

  <update id="updateRole"></update>

  <select id="findAllRoles" resultType="com.stone.it.rcms.base.vo.RoleVO">
    <include refid="query_base"/>
  </select>

  <select id="findRoleByEnterpriseId" resultType="com.stone.it.rcms.base.vo.RoleVO">
    <include refid="query_base"/>
    where enterprise_id = #{enterpriseId,jdbcType=VARCHAR}
  </select>
</mapper>